<!DOCTYPE HTML>

<html lang="en">
<head>

	<!-- JQuery -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
	
	<%= stylesheet_link_tag "model", media: "all" %>
    <%= javascript_include_tag "model" %>

	<!-- Materialize -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>

	<!-- Select2 -->
	<!-- Cannot resolve CSS cleanly, implement later if we want. -->

</head>

<body>
	<div id="page-body">
	<div id="assembly-head"> 
	<button class="btn-flat" onclick="hide('assembly-panel'); show('select-panel')">+Material</button>
	<button class="btn-flat" onclick="hide('select-panel'); show('assembly-panel')">+Sub-Assembly</button>
	</div>

	<div id="assembly-body">
		<input type="text" name="assembly-name" value="New Assembly" style="width: 150px; margin-bottom: 0px;">

		<ul id="assembly" class="collection">
		</ul>

	</div>

	<div id="assembly-tail">
		<button class="btn-flat"> Submit Assembly </button>
	</div>
	</div>

	<div id="select-panel">
	<div class="input-field col s12">
		<select id="material-select">
			<option value="" disabled selected> Select Your Material </option>
			<%= grouped_options_for_select(@material_options) %>
		</select>
		<label>Material</label>
	</div>

	<div id="material-properties">
		<hr>
		<div>
		<input value="1" type="number" name="amount" id="amount">
		<select id="amount-unit">
			<option value="kg">kg</option>
		</select>
		<label>Amount</label>
		</div>
	</div>

	<div class="actions">
		<button class="btn-flat" style="background-color: #b33;" onclick="hide('select-panel')" id = "material-cancel">
		Cancel
		</button>
		<button class="btn-flat" onclick="add_material()" id="material-add">Add</button>
	</div>
	</div>
	
	<div id="assembly-panel">
	<div id="assembly-name-input">
		<label for="assembly-name">Name</label>
		<input type="text" id="assembly-name"></input>
	</div>
	
	<div id="assembly-desc-input">
		<label for="assembly-desc">Description</label>
		<input type="text" id="assembly-desc"></input>
	</div>
	
	
	<div class="actions">
		<button class="btn-flat" style="background-color: #b33;" onclick="hide('assembly-panel')" id = "assembly-cancel">
		Cancel
		</button>
		<button class="btn-flat" id="assembly-add">Add</button>
	</div>
</body>
</html>
